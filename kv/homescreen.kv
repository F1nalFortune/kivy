<HomeScreen>:
    KivyCamera:
        id: qrcam
    GridLayout:
        cols: 1
        Button:
            text: "Start"
            font_size: 12
            on_release: root.dostart()
            size: 75, 50
            size_hint: None, None
        Button:
            text: "Settings"
            font_size: 12
            on_release: app.change_screen("settings_screen")
            size: 75, 50
            size_hint: None, None
        Button:
            text: "Download Pictures"
            font_size: 12
            on_release: app.get()
            size: 75, 50
            size_hint: None, None
        Button:
            text: "Blacklist Database"
            font_size: 12
            on_release: app.change_screen("database_screen")
            size: 75, 50
            size_hint: None, None


